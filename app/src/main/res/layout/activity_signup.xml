<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgbg"
    tools:context=".SignupActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Full Name :"
        android:fontFamily="@font/cutive"
        android:textSize="12dp"
        android:paddingLeft="40dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/Fullname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="8dp"
        android:textColorHint="#989494"
        android:background="@color/white"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:layout_marginBottom="0dp"
        android:fontFamily="@font/cutive"
        android:hint="ex: Pedro A. Penduko"
        android:paddingLeft="25dp"
        android:textSize="15dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="Age :"
        android:fontFamily="@font/cutive"
        android:textSize="12dp"
        android:paddingLeft="40dp"
        android:textColor="@color/black"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="8dp"
        android:textColorHint="#989494"
        android:background="@color/white"
        android:id="@+id/Age"
        android:hint="Age"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/cutive"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email :"
        android:fontFamily="@font/cutive"
        android:textSize="12dp"
        android:paddingLeft="40dp"
        android:textColor="@color/black"/>


    <EditText
        android:id="@+id/register_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="8dp"
        android:textColorHint="#989494"
        android:background="@color/white"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/cutive"
        android:textColor="@color/black"
        android:hint="name_lastname@gmail.com"
        android:paddingLeft="25dp"
        android:textSize="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password :"
        android:fontFamily="@font/cutive"
        android:textSize="12dp"
        android:paddingLeft="40dp"
        android:textColor="@color/black"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="8dp"
        android:id="@+id/register_password"
        android:background="@color/white"
        android:hint="6 character/digits"
        android:textColorHint="#989494"
        android:textSize="15dp"
        android:fontFamily="@font/cutive"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="25dp"
        android:textColor="@color/black"
        android:drawableRight="@drawable/ic_eye"
        android:inputType="textPassword"
        android:drawablePadding="1dp"
        android:longClickable="false"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Re Enter Password :"
        android:fontFamily="@font/cutive"
        android:textSize="12dp"
        android:paddingLeft="40dp"
        android:textColor="@color/black"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="8dp"
        android:background="@color/white"
        android:id="@+id/register_repassword"
        android:hint="Re-enter Password"
        android:textSize="15dp"
        android:textColorHint="#989494"
        android:fontFamily="@font/cutive"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="25dp"
        android:textColor="@color/black"
        android:drawableRight="@drawable/ic_eye"
        android:inputType="textPassword"
        android:drawablePadding="1dp"
        android:longClickable="false"
        />



    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/button_bg"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/text_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Already account Sign \nClick here!"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:fontFamily="@font/cutive"
        />
</LinearLayout>